@model IEnumerable<BulkyBook.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6  text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                <a class="nav-link text-black">Category Name</a>
            </th>
            <th>
                <a class="nav-link text-black">Display Order</a>
            </th>
            <th>
                <a class="nav-link text-black">EDIT</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="42%">
                    <a class="nav-link text-black">@obj.Name</a>
                </td>
                <td width="42%">
                    <a class="nav-link text-black">@obj.DisplayOrder</a>
                </td>
                <td width="7%">
                    <div class="w-75 btn-group" role="group">
                        <a class="nav-link text-black" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary" mx-2><i class="bi bi-pencil-square"></i>  Edit</a>
                        <a class="nav-link text-black" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-dan" mx-2><i class="bi bi-trash" class="btn btn-danger" mx-2></i>  Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>