@model IEnumerable<BulkyBook.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Product List</h2>
        </div>
        <div class="col-6  text-end">
            <a asp-controller="CoverType" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    <a class="nav-link text-black">Title</a>
                </th>
                <th>
                    <a class="nav-link text-black">ISBN</a>
                </th>
                <th>
                    <a class="nav-link text-black">Price</a>
                </th>
                <th>
                    <a class="nav-link text-black">Author</a>
                </th>
                <th>
                    <a class="nav-link text-black">Category</a>
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>